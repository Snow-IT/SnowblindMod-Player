<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="App.Bg0">#0E171C</Color>
    <Color x:Key="App.Bg1">#141F25</Color>
    <Color x:Key="App.Panel">#1A262D</Color>
    <Color x:Key="App.Panel2">#1F2D35</Color>
    <Color x:Key="App.Border">#2C3A43</Color>
    <Color x:Key="App.Text">#E8EEF2</Color>
    <Color x:Key="App.TextMuted">#AAB8C2</Color>
    <Color x:Key="App.Accent">#7FD3E8</Color>
    <Color x:Key="App.Danger">#D45D5D</Color>

    <!-- Notification colors (dark theme) -->
    <Color x:Key="App.Success">#2D6F42</Color>
    <Color x:Key="App.Warning">#8E562E</Color>
    <Color x:Key="App.Error">#7A1D1D</Color>
    <Color x:Key="App.Info">#1A3A4A</Color>

    <!-- Log colors (dark theme) -->
    <Color x:Key="App.LogDebug">#8AA0AC</Color>
    <Color x:Key="App.LogInfo">#E8EEF2</Color>
    <Color x:Key="App.LogWarn">#E1A64A</Color>
    <Color x:Key="App.LogError">#E36C6C</Color>
    <Color x:Key="App.LogCritical">#FF5A5A</Color>

    <SolidColorBrush x:Key="Brush.Bg0" Color="{StaticResource App.Bg0}" />
    <SolidColorBrush x:Key="Brush.Bg1" Color="{StaticResource App.Bg1}" />
    <SolidColorBrush x:Key="Brush.Panel" Color="{StaticResource App.Panel}" />
    <SolidColorBrush x:Key="Brush.Panel2" Color="{StaticResource App.Panel2}" />
    <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource App.Border}" />
    <SolidColorBrush x:Key="Brush.Text" Color="{StaticResource App.Text}" />
    <SolidColorBrush x:Key="Brush.TextMuted" Color="{StaticResource App.TextMuted}" />
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource App.Accent}" />
    <SolidColorBrush x:Key="Brush.Danger" Color="{StaticResource App.Danger}" />

    <!-- Notification brushes -->
    <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource App.Success}" />
    <SolidColorBrush x:Key="Brush.Warning" Color="{StaticResource App.Warning}" />
    <SolidColorBrush x:Key="Brush.Error" Color="{StaticResource App.Error}" />
    <SolidColorBrush x:Key="Brush.Info" Color="{StaticResource App.Info}" />

    <!-- Log brushes -->
    <SolidColorBrush x:Key="Brush.LogDebug" Color="{StaticResource App.LogDebug}" />
    <SolidColorBrush x:Key="Brush.LogInfo" Color="{StaticResource App.LogInfo}" />
    <SolidColorBrush x:Key="Brush.LogWarn" Color="{StaticResource App.LogWarn}" />
    <SolidColorBrush x:Key="Brush.LogError" Color="{StaticResource App.LogError}" />
    <SolidColorBrush x:Key="Brush.LogCritical" Color="{StaticResource App.LogCritical}" />

</ResourceDictionary>
