<Window x:Class="SnowblindModPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snowblind-Mod Player" Height="600" Width="900"
        Background="#F3F3F3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#ECECEC">
            <Button Content="Videos" Height="50" Background="Transparent" BorderThickness="0"/>
            <Button Content="Logs" Height="50" Background="Transparent" BorderThickness="0"/>
            <Button Content="Settings" Height="50" Background="Transparent" BorderThickness="0"/>
        </StackPanel>

        <!-- Content Area -->
        <Border Grid.Column="1" Padding="20">
            <TextBlock Text="Welcome to Snowblind-Mod Player" 
                       FontSize="18" Foreground="#333333"/>
        </Border>
    </Grid>
</Window>
