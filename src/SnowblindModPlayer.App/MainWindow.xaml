<Window x:Class="SnowblindModPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snowblind-Mod Player" Height="600" Width="900"
        Background="#F3F3F3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#ECECEC">
            <Button Content="Videos" Height="50" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateVideosCommand}"/>
            <Button Content="Logs" Height="50" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateLogsCommand}"/>
            <Button Content="Settings" Height="50" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateSettingsCommand}"/>
        </StackPanel>

        <!-- Content Area -->
        <Border Grid.Column="1" Padding="0">
            <ContentControl Content="{Binding CurrentView}" />
        </Border>
    </Grid>
</Window>
