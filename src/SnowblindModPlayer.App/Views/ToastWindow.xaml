<Window x:Class="SnowblindModPlayer.Views.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification"
        Width="380"
        Height="Auto"
        MaxHeight="200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    
    <!-- Outer shadow/border effect -->
    <Border Background="Transparent" 
            Padding="0">
        <!-- Main toast container -->
        <Border Background="{DynamicResource Brush.Panel}"
                BorderBrush="{DynamicResource Brush.Border}"
                BorderThickness="1"
                CornerRadius="10"
                Padding="0">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Header: App info + Icon -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource Brush.Bg1}"
                        BorderBrush="{DynamicResource Brush.Border}"
                        BorderThickness="0,0,0,1"
                        Padding="14,10,14,10"
                        CornerRadius="10,10,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- App Icon -->
                        <Image Source="pack://application:,,,/Assets/Icon.ico" 
                               Width="20" Height="20" 
                               Margin="0,0,10,0"
                               VerticalAlignment="Center" />
                        
                        <!-- App Name -->
                        <TextBlock Text="Snowblind-Mod Player"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text}"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>
                
                <!-- Content: Title + Message -->
                <Grid Grid.Row="1" Margin="14,12,14,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Type Icon (Error/Warning/Success/Info) -->
                    <TextBlock x:Name="TypeIcon"
                               Grid.Column="0"
                               FontSize="20"
                               Margin="0,0,10,0"
                               VerticalAlignment="Top"
                               Foreground="{DynamicResource Brush.Accent}" />
                    
                    <!-- Title + Message -->
                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <TextBlock x:Name="TitleBlock"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Brush.Text}"
                                   Margin="0,0,0,4"
                                   TextWrapping="Wrap" />
                        
                        <TextBlock x:Name="MessageBlock"
                                   FontSize="12"
                                   Foreground="{DynamicResource Brush.TextMuted}"
                                   TextWrapping="Wrap"
                                   LineHeight="16" />
                    </StackPanel>
                </Grid>
                
            </Grid>
        </Border>
    </Border>
</Window>
