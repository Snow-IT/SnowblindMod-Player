<UserControl x:Class="SnowblindModPlayer.Views.MonitorSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Border Padding="20">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Select Monitor for Fullscreen Display"
                       FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Monitor Layout Canvas -->
            <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Background="#F9F9F9" Margin="0,0,0,20">
                <Canvas x:Name="MonitorCanvas" Height="300" Background="White"/>
            </Border>

            <!-- Selected Monitor Info -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="Selected Monitor:" FontWeight="Bold" Margin="0,0,0,5"/>
                <Border Background="#E8E8E8" Padding="10" CornerRadius="4">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding SelectedMonitor.DisplayName, FallbackValue='No monitor selected'}"
                                   FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock Margin="5,5,0,0">
                            <Run Text="Position: "/><Run Text="{Binding SelectedMonitor.X, FallbackValue='-'}"/><Run Text=", "/><Run Text="{Binding SelectedMonitor.Y, FallbackValue='-'}"/>
                        </TextBlock>
                        <TextBlock Margin="5,2,0,0">
                            <Run Text="Resolution: "/><Run Text="{Binding SelectedMonitor.Width, FallbackValue='-'}"/><Run Text="x"/><Run Text="{Binding SelectedMonitor.Height, FallbackValue='-'}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>

            <TextBlock Text="Available Monitors:" FontWeight="Bold" Margin="0,20,0,10"/>

            <!-- Monitor List -->
            <ItemsControl ItemsSource="{Binding AvailableMonitors}" HorizontalAlignment="Left">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Margin="0,0,10,10" Padding="15,10" Background="#0078D4" Foreground="White"
                                ToolTip="{Binding DisplayName}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding DisplayName}"/>
                                <TextBlock Text=" (" Margin="5,0,0,0"/>
                                <TextBlock Text="{Binding Width}"/><TextBlock Text="x"/>
                                <TextBlock Text="{Binding Height}"/><TextBlock Text=")"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>
