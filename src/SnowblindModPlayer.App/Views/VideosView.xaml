<UserControl x:Class="SnowblindModPlayer.Views.VideosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SnowblindModPlayer.Converters"
             Background="Transparent">
    <UserControl.Resources>
        <converters:ThumbnailPathToImageSourceConverter x:Key="ThumbnailConverter" />
        <converters:EqualsToVisibilityConverter x:Key="EqualsToVisibilityConverter" />
        <DataTemplate x:Key="TileTemplate">
            <Border x:Name="TileRoot" Background="{DynamicResource Brush.Panel}" BorderBrush="{DynamicResource Brush.Border}" BorderThickness="1"
                    CornerRadius="10" Padding="12" Margin="0,0,12,12" Width="200">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Height="96" Background="{DynamicResource Brush.Panel2}" CornerRadius="8" ClipToBounds="True">
                        <Image Stretch="UniformToFill" Source="{Binding ThumbnailPath, Converter={StaticResource ThumbnailConverter}}" />
                    </Border>

                    <TextBlock Grid.Row="1" Text="{Binding DisplayName}" FontSize="16" FontWeight="SemiBold" Margin="0,10,0,0" TextAlignment="Center" />

                    <Border x:Name="DefaultBadge" Background="{DynamicResource Brush.Accent}" CornerRadius="10" Padding="6,2"
                            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6">
                        <Border.Visibility>
                            <MultiBinding Converter="{StaticResource EqualsToVisibilityConverter}">
                                <Binding Path="DataContext.DefaultVideoId" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                <Binding Path="Id" />
                            </MultiBinding>
                        </Border.Visibility>
                        <TextBlock Text="&#x2605;" FontFamily="Segoe UI Symbol" Foreground="White" FontWeight="Bold" FontSize="12" />
                    </Border>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                    <Setter TargetName="TileRoot" Property="BorderBrush" Value="{DynamicResource Brush.Accent}" />
                    <Setter TargetName="TileRoot" Property="BorderThickness" Value="2" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <DataTemplate x:Key="ListTemplate">
            <Border x:Name="RowRoot" Background="{DynamicResource Brush.Panel}" BorderBrush="{DynamicResource Brush.Border}" BorderThickness="1"
                    CornerRadius="8" Padding="12" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Width="96" Height="54" Background="{DynamicResource Brush.Panel2}" CornerRadius="6" Margin="0,0,12,0" ClipToBounds="True">
                        <Image Stretch="UniformToFill" Source="{Binding ThumbnailPath, Converter={StaticResource ThumbnailConverter}}" />
                    </Border>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DisplayName}" FontSize="16" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding DateAdded, StringFormat='Added: {0:yyyy-MM-dd HH:mm:ss}'}" FontSize="12" Foreground="{DynamicResource Brush.TextMuted}" Margin="0,3,0,0" />
                    </StackPanel>

                    <Border x:Name="DefaultBadgeList" Grid.Column="2" Background="{DynamicResource Brush.Accent}" CornerRadius="10" Padding="8,3"
                            VerticalAlignment="Center" Margin="0,0,12,0">
                        <Border.Visibility>
                            <MultiBinding Converter="{StaticResource EqualsToVisibilityConverter}">
                                <Binding Path="DataContext.DefaultVideoId" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                <Binding Path="Id" />
                            </MultiBinding>
                        </Border.Visibility>
                        <TextBlock Text="&#x2605; Default" FontFamily="Segoe UI Symbol" Foreground="White" FontWeight="Bold" FontSize="12" />
                    </Border>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                    <Setter TargetName="RowRoot" Property="BorderBrush" Value="{DynamicResource Brush.Accent}" />
                    <Setter TargetName="RowRoot" Property="BorderThickness" Value="2" />
                    <Setter TargetName="RowRoot" Property="Background" Value="{DynamicResource Brush.Panel2}" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="Transparent" Padding="16,12,16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Height="36" VerticalContentAlignment="Center" />
                <ComboBox Grid.Column="1" Width="140" Height="34" Margin="10,0,0,0" SelectedItem="{Binding ViewMode}" ItemsSource="{Binding ViewModes}" />
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="Transparent" Padding="16">
            <ContentControl>
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ViewMode}" Value="Tile">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <ListBox ItemsSource="{Binding FilteredVideos}" SelectedItem="{Binding SelectedMedia}" BorderThickness="0" Background="Transparent"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                ScrollViewer.CanContentScroll="False" HorizontalContentAlignment="Stretch">
                                            <ListBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel IsItemsHost="True" />
                                                </ItemsPanelTemplate>
                                            </ListBox.ItemsPanel>
                                            <ListBox.ItemTemplate>
                                                <StaticResource ResourceKey="TileTemplate" />
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ViewMode}" Value="List">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <ListBox ItemsSource="{Binding FilteredVideos}" SelectedItem="{Binding SelectedMedia}">
                                            <ListBox.ItemTemplate>
                                                <StaticResource ResourceKey="ListTemplate" />
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Border>

        <Border Grid.Row="2" Background="{DynamicResource Brush.Bg1}" BorderBrush="{DynamicResource Brush.Border}" BorderThickness="0,1,0,0">
            <TextBlock Text="Double click to play a video" Foreground="{DynamicResource Brush.TextMuted}" HorizontalAlignment="Center" Margin="0,10" />
        </Border>
    </Grid>
</UserControl>
